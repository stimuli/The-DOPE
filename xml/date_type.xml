<table name="date_type">
  <column name="dty_id"
          description="The unique ID for this type of date. ID 1 is a public holiday."
          type="INTEGER"
          primaryKey="true"
          autoIncrement="true"
          required="true"/>
  <column name="dty_is_holiday"
          description="Whether this event type is treated as a holiday or not"
          type="CHAR"
          size="1"
          required="true"/>
  <column name="dty_desc"
          description="The actual description of this date type."
          type="VARCHAR"
          size="200"
          required="true"/>
</table>
