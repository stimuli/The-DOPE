<table name="industry">
  <column name="ind_id"
          description="The unique industry identifier."
          type="INTEGER"
          primaryKey="true"
          autoIncrement="true"
          required="true"/>
  <column name="ind_name"
          description="The name of this industry."
          type="VARCHAR"
          size="255"
          required="true"/>
  <column name="ind_ssc_code"
          description="The industry sub-sector code."
          type="VARCHAR"
          size="10"
          required="true"/>

  <foreign-key foreignTable="subsector">
    <reference local="ind_ssc_code" foreign="ssc_code"/>
  </foreign-key>

  <unique name="xind_name">
    <unique-column name="ind_name"/>
  </unique>

  <index name="xind_ssc_code">
    <index-column name="ind_ssc_code"/>
  </index>

</table>
